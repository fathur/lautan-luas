.row.apply-now.education-history
  .col-sm-12

    .form-title.padding-bottom-small Add / Edit Working Experience Record
    form(method="post" action="#")
      .row
        .form-group.col-sm-7
          input.form-control(type="text" placeholder="Company Name")
        .form-group.col-sm-5
          select.form-control
            each item in ['Indutriy Area','SD','SMA']
              option= item
      .row
        .form-group.col-sm-12
          input.form-control(type="text" placeholder="Company Adress")
          
          
      .row
        
        .col-sm-1.label-input
          | From
        .form-group.col-sm-3
          select#start-month-working.form-control
            each item in ['Month','January','February','March','April','May','June','July','April','August','September','October','December']
              option= item
        .form-group.col-sm-3
          select#start-year-working.form-control
            each item in ['Year',1980,1981]
              option= item

        .col-sm-1.label-input
          | to
        .form-group.col-sm-2
          select#end-month-working.form-control
            each item in ['Month','January','February','March','April','May','June','July','April','August','September','October','December']
              option= item
        .form-group.col-sm-2
          select#end-year-working.form-control
            each item in ['Year',1980,1981]
              option= item

      .row
        .form-group.col-sm-7
          input.form-control(type="text" placeholder="Position Title")
          
        .form-group.col-sm-5
          input.form-control(type="text" placeholder="Number of Subordinates")

      .row
        .form-group.col-sm-12
          textarea.form-control(placeholder="Job Description")

      .row.btn-action.padding-bottom-large.padding-top-small
        button.btn.btn-blue.pull-right(type="submit") Add
        a.btn.btn-transparant.pull-right(href="#") Cancel

.row.apply-now.education-history--collections
  .col-sm-12
    a.add-steps-item(href="#") + Add new working experience record

    // Desktop and table version
    .table-responsive.hidden-xs
      table.table
        thead
          tr 
            th No
            th Period
            th Company Name
            th Position Title 
            th Description 
            th Actions
        tbody
          each item in [1,2,3]
            tr 
              td 1.
              td 200 - 2003 
              td Google
              td Analyst
              td Best empolyee
              td.action
                a.blue(href="#")
                  i.fa.fa-pencil
                  | Edit
                a.blue(href="#")
                  i.fa.fa-trash-o
                  | Delete
           

    // Mobile version
    each item in [1,2,3]
      .table-responsive.visible-xs-block
        table.table.table-mobile
          thead
            tr
              th(colspan="2") 2002 -2003
          tbody
            tr
              td.subhead Company Name
              td Google
            tr 
              td.subhead Position Title
              td Analyst
            tr 
              td.subhead Description
              td Best empolyee



  .col-sm-12.btn-action
    a.btn.btn-blue.pull-right.next-apply-steps(href="#") Next
    button.btn.btn-transparant.pull-right(type="submit") Save
    a.btn.btn-transparant.pull-right.prev-apply-steps(href="#") Back
