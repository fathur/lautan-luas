.row.apply-now.education-history
  .col-sm-12

    .form-title.padding-bottom-small Add / Edit training Record
    form(method="post" action="#")
      .row
        .form-group.col-sm-7
          input.form-control(type="text" placeholder="Institution Name")
        .form-group.col-sm-5
          select.form-control
            each item in ['Type','SD','SMA']
              option= item
      .row
        .form-group.col-sm-7
          input.form-control(type="text" placeholder="Location")
        .form-group.col-sm-5
          select.form-control
            each item in ['Certificate Year','SD','SMA']
              option= item

      .row.btn-action.padding-bottom-large.padding-top-small
        button.btn.btn-blue.pull-right(type="submit") Add
        a.btn.btn-transparant.pull-right(href="#") Cancel

.row.apply-now.education-history--collections
  .col-sm-12
    a.add-steps-item(href="#") + Add new training record

    // Desktop version
    .table-responsive.hidden-xs
      table.table
        thead
          tr 
            th No
            th Institution
            th Location
            th Year
            th Actions
        tbody
          each item in [1,2,3]
            tr 
              td 1.
              td Bina Nusantara
              td Jakarta
              td 2015
              td.action
                a.blue(href="#")
                  i.fa.fa-pencil
                  | Edit
                a.blue(href="#")
                  i.fa.fa-trash-o
                  | Delete
          
    // Mobile version
    each item in [1,2,3]
      .table-responsive.visible-xs-block
        table.table.table-mobile
          thead
            tr
              th(colspan="2") Bina Nusantara
          tbody
            tr
              td.subhead Location
              td Jakarta
            tr
              td.subhead Year
              td 2005


  .col-sm-12.btn-action
    a.btn.btn-blue.pull-right.next-apply-steps(href="#") Next
    button.btn.btn-transparant.pull-right(type="submit") Save
    a.btn.btn-transparant.pull-right.prev-apply-steps(href="#") Back
