.row.apply-now.education-history
  .col-sm-12

    .form-title.padding-bottom-small Add / Edit training Record
    form(method="post" action="#")
      .row
        .form-group.col-sm-7
          input.form-control(type="text" placeholder="Institution Name")
        .form-group.col-sm-5
          select.form-control
            each item in ['Type','SD','SMA']
              option= item
      .row
        .form-group.col-sm-7
          input.form-control(type="text" placeholder="Location")
        .form-group.col-sm-5
          select.form-control
            each item in ['Certificate Year','SD','SMA']
              option= item

      .row.btn-action.padding-bottom-large.padding-top-small
        button.btn.btn-blue.pull-right(type="submit") Add
        a.btn.btn-transparant.pull-right(href="#") Cancel

