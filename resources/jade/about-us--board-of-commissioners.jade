extends ./_layout.jade

block title
  title Lautan Luas - Board of Commissioners

block content
  .container-fluid.hero

  .breadcrumb-wrapper
    .container
      ol.breadcrumb
        li
          a(href="index.html") Home
        li.separator
        li
          a(href="about-us.html") About Us
        li.separator
        li.active Board of Commissioners

  .white-bg.board-of.padding-extra-large
    //- each item in [1,2,3]
    each item in [{name1: 'Joan Fudiana', title1: 'President Commissioner', picture1: 'images/joan-fudiana-1.png', name2: 'Pranata Hajadi', title2: 'Vice President Commissioner', picture2: 'images/pranata-hajadi-1.png'},{name1: 'Hari Slamet Widodo', title1: 'Independent Commissioner', picture1: 'images/hari-slamet-widodo-1.png', name2: 'Zaenal Arifin', title2: 'Independent Commissioner', picture2: 'images/zaenal-arifin-1.png'}]
      
      // Untuk table dan desktop version
      .board-row.hidden-xs
        .picture
          .gray-bg
          .container
            .col-sm-6
              img.img-responsive.center-block(src= item.picture1)
            .col-sm-6
              img.img-responsive.center-block(src= item.picture2)
        .description
          .container
            .col-md-6
              .row 
                .col-md-8
                  h2= item.name1
                  .position= item.title1
                .col-md-4.view-profile
                  a.view-all(href="about-us--board-of-commissioners--single.html") View Profile &nbsp;
                    i.fa.fa-angle-right
              
            .col-md-6
              .row 
                .col-md-8
                  h2= item.name2
                  .position= item.title2
                .col-md-4.view-profile
                  a.view-all(href="about-us--board-of-commissioners--single.html") View Profile &nbsp;
                    i.fa.fa-angle-right
              
              

      // Untuk mobile version
      .board-row.hidden-sm.hidden-md.hidden-lg
        // First person
        .picture
          .gray-bg
          .container
            .col-sm-12
              img.img-responsive.center-block(src= item.picture1)
        .description
          .container
            .col-md-6.pull-left
              h2= item.name1
              .position= item.title1
            .col-md-6.pull-right
              a.view-all(href="about-us--board-of-commissioners--single.html") View Profile &nbsp;
                i.fa.fa-angle-right
              

        // Second person
        .picture
          .gray-bg
          .container
            .col-sm-12
              img.img-responsive.center-block(src= item.picture2)
        .description
          .container
            .col-md-6.pull-left
              h2= item.name2
              .position= item.title2
            .col-md-6.pull-right
              a.view-all(href="about-us--board-of-commissioners--single.html") View Profile &nbsp;
                i.fa.fa-angle-right
              
         
